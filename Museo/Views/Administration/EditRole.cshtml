@model EditRoleViewModel

@{ 
    ViewBag.Title = "Editar Rol";
}

<h1>Editar Rol</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Editar</button>
            <a asp-action="ListRoles" class="btn btn-primary">Cancelar</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Usuarios en este rol</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Ninguno hasta el momento</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto" asp-action="EditUsersInRole"
               asp-controller="Administration" asp-route-roleId="@Model.Id">Añadir o remover usuario</a>
        </div>
    </div>

    <a class="btn btn-primary" style="width:auto" asp-action="EditClaims"
       asp-controller="Administration" asp-route-roleId="@Model.Id">Modificar permisos</a>

</form>