
@model User

<div class="section container">
    <div class="col-form-label">
        <div class="section-title">
            <h3>Create new User</h3>
        </div>
        <form enctype="multipart/form-data" asp-controller="Product" asp-action="Create" method="post" class="mt-3">
            <div class="form-group row rounded">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" />
                <span asp-validation-for="FullName"></span>
            </div>
            <div class="form-group row">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" />
                <span asp-validation-for=UserName></span>

            </div>
            <div class="form-group row">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>

            </div>
            <div class="form-group row">
                <div class="custom-file">
                    <label asp-for="Photo" class="custom-file-label">Choose File...</label>
                    <input asp-for="Photo" class="form-control custom-file-input" />
                </div>
            </div>
            <div>
                <button class="badge-pill" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>
