@model Area



<div class="section container">
    <div class="col-form-label">
        <div class="section-title">
            <h3>Inserte Nueva Area</h3>
        </div>
        <form enctype="multipart/form-data" asp-controller="Area" asp-action="Add" method="post" class="mt-3">
            <div class="form-group row rounded">
                <label asp-for="Name">Nombre</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Acronym">Siglas</label>
                <input asp-for="Acronym" />
                <span asp-validation-for=Acronym></span>
            </div>
            <div>
                <button class="badge-pill" type="submit">Crear</button>
            </div>
        </form>
    </div>
</div>

@{
    if (ViewBag.Succesfull == "true")
    {
        <h3 class="text-success">Area insertada correctamente</h3>
    }
}







